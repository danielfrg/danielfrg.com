---
import { SITE_TITLE } from '../../lib/consts';

export interface Props {
    title?: string;
    nav?: object[];
    dark?: boolean;
}

const title = SITE_TITLE;

const nav = [
{ text: "About", href: "/about" },
{ text: "Now", href: "/now" },
    { text: "Blog", href: "/blog" },
    { text: "Projects", href: "/projects" },
{ text: "Code", href: "https://github.com/danielfrg" },
{ text: "Wiki", href: "https://wiki.danielfrg.com" },
];
---

<header
    class="w-full max-w-screen-lg flex flex-col md:flex-row gap-4 md:gap-0 mx-auto p-4 justify-between"
>
    <div class="flex md:text-left">
        <a
            href="/"
            class="text-3xl font-extrabold tracking-tighter bg-clip-text bg-gradient-to-r text-myorange"
        >
            {title}
        </a>
    </div>

    <div class="flex flex-row grow justify-center md:justify-end ">
        {
            nav?.map((item) => (
                <a
                    href={item.href}
                    class="hover:text-myorange font-bold border-b-0 text-lg px-2 md:pl-0 md:pr-4 py-2 text-center"
                >
                    {item.text}
                </a>
            ))
        }
    </div>
</header>
