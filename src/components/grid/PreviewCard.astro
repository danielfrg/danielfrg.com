---
export interface Props {
  title: string;
  desc: string;
  img: string;
  links: any;
}

const { title, desc, img, links } = Astro.props;
---

<div class="flex flex-col bg-black p-1 prose prose-invert">
  <div class="flex">
    <img src={img} class="w-full min-h-[260px] m-0 object-cover" />
  </div>
  <div class="flex flex-col px-2 py-2 text-center">
    <span class="font-mono text-sm">{desc}</span>

    <h3 class="text-2xl md:text-3xl font-extrabold uppercase m-0">
      {title}
    </h3>

    <div class="flex flex-col md:flex-row gap-4 w-full h-full justify-center items-center">
      {
        links.map((link: any) => (
          <a href={link.href} class="underline hover:text-mywhite ">
            {link.text}
          </a>
        ))
      }
    </div>
  </div>
</div>
