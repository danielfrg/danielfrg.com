---
import Prose from "@layouts/Prose.astro";
import { SITE_DESCRIPTION, SITE_TITLE, SITE_URL } from "../lib/consts";

let title = `Now - ${SITE_TITLE}`;
let description = SITE_DESCRIPTION;
let permalink = SITE_URL;
---

<Prose title={title} description={description} permalink={permalink}>
  <h1 class="mb-10 mt-0">Right now, I am currently:</h1>
  <p>
    <ul>
      <li>
        Working at <a href="https://www.nvidia.com/">NVIDIA</a> as a Senior Product Manager for Python
        and CUDA
      </li>
      <li>
        Occasionally building apps at <a href="https://inmatura.com">Inmatura</a>
      </li>
    </ul>
  </p>
  <p class="text-xs">Updated April 15, 2024</p>
</Prose>
