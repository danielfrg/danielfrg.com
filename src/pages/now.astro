import Page from "../layouts/Page.astro";

let title = `Now - ${SITE_TITLE}`;
let description = SITE_DESCRIPTION;
let permalink = SITE_URL;

---

<Page title={title} description={description} permalink={permalink}>
        <h1>Now</h1>
        <p class="">
            Right now, I am currently:
            <ul>
            <li>
            Working at <a href="https://www.nvidia.com/">NVIDIA</a> as a Senior Product Manager for Python and CUDA
            </li>
            <li>
            Occasionally building apps at <a href="https://inmatura.com">Inmatura</a>
            </li>
            </ul>
        </p>
        <p>
        Updated April 1st, 2024
        </p>
</Page>
