---
import BaseHead from "../components/global/BaseHead.astro";
let title = "Daniel Rodriguez";
let description = "Daniel Rodriguez website, blog and portfolio";
let permalink = "https://danielfrg.com/";
---

<html lang="en">
    <head>
        <BaseHead
            title={title}
            description={description}
            permalink={permalink}
        />
    </head>

    <body>
        <div class="flex h-screen">
            <div class="lg:w-2/3 mx-4 m-auto lg:m-auto">
                <div>
                    <h1
                        class="py-2 text-5xl font-extrabold tracking-tighter bg-clip-text bg-gradient-to-r from-myorange to-mypink text-transparent"
                    >
                        Daniel Rodriguez
                    </h1>
                    <div
                        class="text-gray-700 text-lg font-light leading-loose mt-2"
                    >
                        <strong class="font-bold text-gray-700">
                            I build data science tools.
                        </strong>
                        I'm currently working as a Developer Relations Engineer at
                        Google.
                    </div>
                </div>

                <div class="my-8 lg:text-right">
                    <ul class="text-2xl tracking-tight nav-links">
                        <li class="lg:inline">
                            <a href="/about" class="abold md:px-6 py-4 abold"
                                >About</a
                            >
                        </li>
                        <li class="lg:inline">
                            <a href="/blog" class="abold md:px-6 py-4"
                                >Writing</a
                            >
                        </li>
                        <li class="lg:inline">
                            <a href="/projects" class="abold md:px-6 py-4"
                                >Projects</a
                            >
                        </li>
                        <li class="lg:inline">
                            <a
                                href="https://github.com/danielfrg"
                                class="abold md:px-6 py-4">Code</a
                            >
                        </li>
                    </ul>
                </div>
                <div class="my-8 lg:text-right">
                    <ul class="text-2xl tracking-tight nav-links">
                        <li class="lg:inline">
                            <a
                                href="https://lapalabradeldia.com"
                                class="abold md:px-6 py-4 !text-mygreen hover:underline"
                                >Wordle En Espa√±ol</a
                            >
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </body>
</html>
