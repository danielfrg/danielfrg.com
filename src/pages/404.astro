---
import BaseHead from "../components/common/BaseHead.astro";
import SiteFooter from "../components/common/SiteFooter.astro";
import SiteHeader from "../components/common/SiteHeader.astro";

import { SITE_DESCRIPTION, SITE_TITLE, SITE_URL } from '../consts';

let title = SITE_TITLE;
let description = SITE_DESCRIPTION;
let permalink = SITE_URL;
---

<html lang="en">
    <head>
        <BaseHead
            title={title}
            description={description}
            permalink={permalink}
        />
    </head>

    <body>
        <div class="flex flex-col w-full">
            <SiteHeader />

            <div class="container mx-auto max-w-screen-sm my-8">
                <h2 class="text-center my-10 text-5xl font-extrabold">
                    404 - Page not found
                </h2>

                <img class="mx-auto" src="https://placekitten.com/500/500" alt="A cute cat" />
            </div>
            <SiteFooter />
        </div>
    </body>
</html>
